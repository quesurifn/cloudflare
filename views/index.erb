<html>
  <head>
    <title>CloudFlare App</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="stylesheet" href="css/master.css">
  </head>
  <body class="container-fluid">
    <div class="row">
      <div class="col-md-3">
        <div style="border: solid 1px black; height: 300px; width: 300px;" class="tile">
          <h2 style="text-align:center;">Dev Mode Status</h2>

          <% if @isDevModeOn['result']['value'] == 'on' %>
            <h2 style="background: green; text-align:center;">ON</h2>
            <h2 style="text-align:center; margin:auto;">Time Remaining: <%= @secondsToMinutes %></h2>

            <a class="btn btn-active btn-success text-center" style="display:inline-block; margin: 5rem 7.5rem;" href="/devModeOff">Turn off Dev Mode</a>
          <% else %>
            <h2 style="text-align:center; background: red;">OFF</h2>

            <a class="btn btn-active btn-success text-center" style="display:inline-block;margin:5rem 7.5rem;" href="/devModeOn">Turn On Dev Mode</a>
          <% end %>
        </div>
      </div>
    </div>
  </body>
</html>
